<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicodangelo.pantrie" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <activity
            android:name=".util.ConvertVolume"
            android:label="@string/title_activity_convert_volume"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".util.ConvertMass"
            android:label="@string/title_activity_convert_mass"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".main.NewLogIn"
            android:label="@string/title_activity_new_log_in"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".util.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".main.MainPantrie"
            android:label="@string/title_activity_main_pantrie" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.ForgotPassword"
            android:label="@string/title_activity_forgot_password" >
        </activity>
        <activity
            android:name=".list.ListMain"
            android:label="@string/title_activity_list_main"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".game.ArrowGame"
            android:label="@string/title_activity_arrow_game" >
        </activity>
        <activity
            android:name=".main.LoadPantrie"
            android:label="@string/title_activity_load_pantrie" >
        </activity>
    </application>

</manifest>
