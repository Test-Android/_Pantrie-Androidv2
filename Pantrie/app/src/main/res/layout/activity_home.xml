<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.nicodangelo.pantrie.main.Home"
                android:background="#383838">

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logOutButton"
        android:onClick="logOut"
        android:textColor="#0071fd"
        android:layout_centerVertical="true"
        android:background="#5a585a"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_alignStart="@+id/settingsButton"/>

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_above="@+id/logOutButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToSettings"
        android:layout_margin="5dp"
        android:textColor="#fd7100"
        android:background="#5a585a"/>

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pantrie"
        android:id="@+id/button4"
        android:onClick="goToPantrie"
        android:textColor="#0071fd"
        android:layout_above="@+id/settingsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:background="#5a585a"
        android:layout_margin="5dp"/>
</RelativeLayout>
